{
  "name": "monad-game",
  "version": "1.0.0",
  "description": "这是一个参与Monad Foundation比赛的GameFi项目，使用MultiSYNQ和Monad Testnet构建多人在线游戏应用。",
  "main": "index.js",
  "scripts": {
    "dev": "next dev -p 3001",
    "dev:full": "concurrently \"npm run dev\" \"npm run websocket\"",
    "websocket": "node server/websocket-server.js",
    "demo": "./scripts/demo-start.sh",
    "build": "next build",
    "export": "next export",
    "start": "next start",
    "start:full": "concurrently \"npm run start\" \"npm run websocket\"",
    "lint": "next lint",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:testnet": "hardhat run scripts/deploy.js --network monadTestnet",
    "test": "hardhat test",
    "test:frontend": "jest",
    "test:frontend:watch": "jest --watch",
    "test:frontend:coverage": "jest --coverage",
    "test:all": "npm run test && npm run test:frontend",
    "test:coverage": "npm run test && npm run test:frontend:coverage",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "perf:test": "npm run build && npm run lighthouse",
    "optimize": "node scripts/optimize.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@next/bundle-analyzer": "^15.3.4",
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "concurrently": "^9.2.0",
    "hardhat": "^2.25.0",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@openzeppelin/contracts": "^5.3.0",
    "@rainbow-me/rainbowkit": "^2.1.0",
    "@tanstack/react-query": "^5.81.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.4",
    "next": "^15.3.4",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "viem": "^2.31.4",
    "wagmi": "^2.15.6",
    "web3": "^4.16.0"
  }
}
